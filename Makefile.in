.SUFFIXES: .cc .c

OS = linux

# compiler names
CC = gcc
CXX = g++

VCGDIR = $(HOME)/progs/vcglib

ifeq ($(OS), windows)
INCLUDEDIRS = -I. -I.. -I/usr/include/GL -I./pyramid_point_renderer_base/ \
	-I./pyramid_point_renderer/ -I./pyramid_point_renderer_color/ -I./pyramid_templates/
OBJDIR = ./objs
else
INCLUDEDIRS = -I$(VCGDIR) -I/usr/include/GL -I./ -I../ -I./pyramid_point_renderer_base/ \
	-I./pyramid_point_renderer/ -I./pyramid_point_renderer_color/ -I./pyramid_templates/
OBJDIR = objs
endif

CXXFLAGS = -g -O3 -Wall -Wno-deprecated

CCFLAGS = -g -O3 -Wall
