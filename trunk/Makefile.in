CXX = g++

ifeq ($(OS), windows)
INCLUDEDIRS = -I"$(HOME)/lcgtk/" -I. -I.. -I./pyramid_point_renderer_base/ \
	-I./pyramid_point_renderer/ -I./pyramid_point_renderer_color/ -I./pyramid_templates/
